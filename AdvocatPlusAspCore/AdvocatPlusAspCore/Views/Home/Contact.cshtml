@model AdvocatPlusAspCore.Models.Feedback.ContactModel;
@{
    ViewData["Title"] = "Контакты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="advocateplus-loader"></div>
<!-- Yandex Map -->
<script src="~/js/map.js"></script>
<script src="https://api-maps.yandex.ru/2.1/?apikey=<53c71503-4541-48bd-8262-0e5d8ec21161>&lang=ru_RU" type="text/javascript"></script>

<aside id="advocateplus-hero" class="js-fullheight">
    <div class="flexslider js-fullheight">
        <ul class="slides">
            <li style="background-image: url(../../wwwroot/images/img_bg_2.jpg);">
                <div class="overlay-gradient"></div>
                <div class="container">
                    <div class="col-md-10 col-md-offset-1 text-center js-fullheight slider-text">
                        <div class="slider-text-inner desc">
                            <h2 class="heading-section">Contact Us</h2>
                            <p class="advocateplus-lead">Designed with <i class="icon-heart3"></i> by the fine folks at <a href="http://freehtml5.co" target="_blank">FreeHTML5.co</a></p>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div id="advocateplus-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-push-1 animate-box">

                <div class="advocateplus-contact-info">
                    <h3>Контактная информация</h3>
                    <ul>
                        <li class="far fa-map-marker-alt"><p>Минская обл., Минский р-н,<br /> д. Боровляны-2, ул. Хвойная 2,<br />  Р-40, 1-й км2, ком. 27. </p></li>
                        <li class="far fa-phone"><a href="tel://375296589506"> +375 29 658 95 06</a></li>
                        <li class="fal fa-envelope"><a href="mailto:advokatplus@tut.by"> advokatplus@tut.by</a></li>
                    </ul>
                </div>

            </div>
            <div class="col-md-6 animate-box">
                <h3>Отправьте мне ваше сообщение</h3>
                <form asp-action="Index" asp-controller="Home" class="feedback-form" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <!-- <label for="fname">First Name</label> -->
                            <input asp-for="Contact.Name" type="text" id="fname" class="form-control" placeholder="Ваше имя">
                            <span asp-validation-for="Contact.Name"></span>
                        </div>
                        <div class="col-md-6">
                            <!-- <label for="lname">Last Name</label> -->
                            <input asp-for="Contact.LastName" type="text" id="lname" class="form-control" placeholder="Ваша фамилия">
                            <span asp-validation-for="Contact.LastName"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="email">Email</label> -->
                            <input asp-for="Contact.Email" type="text" id="email" class="form-control" placeholder="Ваш email">
                            <span asp-validation-for="Contact.Email"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="subject">PhoneNumber</label> -->
                            <input asp-for="Contact.PhoneNumber" type="text" id="subject" class="form-control" placeholder="Номер телефона">
                            <span asp-validation-for="Contact.PhoneNumber"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <!-- <label for="message">Message</label> -->
                            <textarea asp-for="Contact.Message" name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Ваше сообщение"></textarea>
                            <span asp-validation-for="Contact.Message"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Отправить сообщение" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div id="map" class="myMap"></div>


